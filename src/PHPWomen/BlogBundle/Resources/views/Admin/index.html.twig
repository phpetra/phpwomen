{% extends 'PHPWomenAdminBundle::layout.html.twig' %}

{% block stylesheets %}
    <style type="text/css">
        .post { margin: 1em; border-bottom: 1px dashed #cccccc;}
    </style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-10">
            <h2>All blog posts</h2>
            <h3 class="btn-danger">@todo put them in a dataTable</h3>

            {% for post in posts %}
                <div class="post">
                    <h3>{{ post.title }}</h3>
                    <span class="post-author">{{ post.author }}</span>
                    <span class="post-date">{{ post.date|date("Y-m-d") }}</span>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-2">

        </div>
    </div>
{% endblock %}